.row
  .col-sm-1
  .col-sm-10
    = form_for [:admin, @fee], html: { class: "form-horizontal", role: "form" } do |form|
      %fieldset
        = render "utils/form_header", object: @fee
        = form.hidden_field :type
        - locals = { form: form, object: @fee, col: "sm", pad: 3, width: 2 }
        = render "admin/fees/forms/#{@fee.subtype}", f: form, locals: locals
        = render "utils/check_box_for", locals.merge(param: :active, text: t("active"), width: 1)
      %hr
      .text-center
        = form.submit t("save"), class: "btn btn-primary"
        = link_to t("cancel"), @fee.new_record? ? admin_fees_path : [:admin, @fee], class: "btn btn-default"

- content_for :title, "Fee"

.row
  .col-md-8.col-md-offset-2

    %h1.text-center= @fee.description(:full)

    %table.table.table-bordered
      %tr
        %th= t("fee.name")
        %td= @fee.name
      %tr
        %th= t("fee.amount")
        %td= euros(@fee.amount)
      %tr
        %th= t("fee.start")
        %td= @fee.start_date.to_s
      %tr
        %th= t("fee.end")
        %td= @fee.end_date.to_s
      %tr
        %th= t("fee.year")
        %td= @fee.year
      %tr
        %th= t("fee.years")
        %td= @fee.years
      %tr
        %th= t("fee.sale_start")
        %td= @fee.sale_start.to_s
      %tr
        %th= t("fee.sale_end")
        %td= @fee.sale_end.to_s
      %tr
        %th= t("fee.discounted_amount")
        %td= euros(@fee.discounted_amount) if @fee.discounted_amount.present?
      %tr
        %th= t("fee.discount_deadline")
        %td= @fee.discount_deadline.to_s
      %tr
        %th= t("fee.age.ref_date")
        %td= @fee.age_ref_date
      %tr
        %th= t("fee.age.min")
        %td= @fee.min_age
      %tr
        %th= t("fee.age.max")
        %td= @fee.max_age
      %tr
        %th= t("fee.rating.min")
        %td= @fee.min_rating
      %tr
        %th= t("fee.rating.max")
        %td= @fee.max_rating
      %tr
        %th= t("fee.url")
        %td= link_to @fee.url, @fee.url, target: "_external" if @fee.url
      = render "utils/timestamps", object: @fee

    = link_to "Edit", edit_admin_fee_path(@fee), class: "btn btn-primary"
    - if @fee.deletable? || params[:show_delete_button_for_test]
      = link_to "Delete", admin_fee_path(@fee), data: { confirm: "Sure you want to delete this fee?" }, method: :delete, class: "btn btn-danger"
    - if @fee.cloneable?
      = link_to "Clone", clone_admin_fee_path(@fee), class: "btn btn-info"
    - if @fee.rolloverable?
      = link_to "Rollover", rollover_admin_fee_path(@fee), class: "btn btn-info"
    = link_to "Fees", admin_fees_path, class: "btn btn-default"

= render "admin/journal_entries/changes", entries: @entries

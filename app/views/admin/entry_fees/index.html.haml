- content_for :title, t("fee.type.entries")

.row
  .col-md-6.col-md-offset-3
  
    %h1.text-center= t("fee.type.entries")

    %table{class: "table table-bordered table-striped"}
      %thead
        %tr
          %th=t("fee.description")
          %th=t("fee.amount")
      - if @fees.count > 0
        %tbody
          - @fees.matches.each do |fee|
            %tr
              %td= link_to fee.description, [:admin, fee]
              %td{class: "righted"}= euros(fee.amount)
          = render "utils/pagination_links", pager: @fees, columns: 2

    = link_to "New", new_admin_entry_fee_path, class: "btn btn-info"

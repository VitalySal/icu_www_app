.row
  .col-sm-8.col-sm-offset-2
    = render "utils/search_panel", form: "admin/users/search_form", title: "Users"
    - if @users.count > 0
      %table{class: "table table-bordered table-striped table-condensed"}
        %thead
          %tr
            %th Email
            %th Expires
        %tbody
          - @users.matches.each do |user|
            %tr
              %td= link_to user.email, [:admin, user]
              %td
                %date= user.expires_on.year
          = render "utils/pagination_links", pager: @users, columns: 2

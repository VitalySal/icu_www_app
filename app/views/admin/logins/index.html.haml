.row
  .col-sm-8.col-sm-offset-2
    = render "utils/search_panel", form: "admin/logins/search_form", title: "Logins"
    - if @logins.count > 0
      %table{class: "table table-bordered table-striped table-condensed"}
        %thead
          %tr
            %th Email
            %th IP
            %th Ago
        %tbody
          - @logins.matches.each do |login|
            %tr
              %td
                - if login.user
                  = link_to login.user.email, [:admin, login.user]
                - else
                  = login.email
              %td= login.ip
              %td= time_ago_in_words(login.created_at, include_seconds: true)
          = render "utils/pagination_links", pager: @logins, columns: 3

- content_for :title, "ICU Officers"

.row
  .col-sm-10.col-sm-offset-1
    %table{class: "table table-striped"}
      %thead
        %tr
          %th Role
          %th Rank
          %th Email
          %th Incumbent
      %tbody
        - @officers.each do |officer|
          %tr
            %td= link_to t("officer.role.#{officer.role}"), [:admin, officer]
            %td{class: officer.active ? nil : "text-done"}= officer.rank
            %td= officer.emails
            %td= officer.player.name(id: true) if officer.player.present?

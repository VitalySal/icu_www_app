- content_for :title, "Subscription Fees"

.row
  .col-md-6.col-md-offset-3
    %table{class: "table table-bordered table-striped"}
      %thead
        %tr
          %th Description
          %th Amount
      %tbody
        - @fees.each do |f|
          %tr
            %td= link_to f.description, [:admin, f]
            %td{class: "righted"}= euros(f.amount)

    = link_to "New", new_admin_subscription_fee_path, class: "btn btn-info"

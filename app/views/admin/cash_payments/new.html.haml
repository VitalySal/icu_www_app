- content_for :title, "New Cash Payment"

.row
  .col-sm-8.col-sm-offset-2
    = form_for [:admin, @cash_payment], html: { class: "form-horizontal", role: "form" } do |f|
      %fieldset
        = render "utils/form_header", header: t("shop.payment.offline.header")
        - locals = { form: f, object: @cash_payment, col: "sm", pad: 3, width: 4, mark: "required"}
        = render "utils/text_field_for", locals.merge(param: :amount, text: t("shop.payment.offline.received"), width: 2)
        = render "utils/text_field_for", locals.merge(param: :first_name, text: t("shop.payment.offline.first_name"))
        = render "utils/text_field_for", locals.merge(param: :last_name, text: t("shop.payment.offline.last_name"))
        = render "utils/select_for", locals.merge(param: :payment_method, text: t("shop.payment.offline.method"), width: 3, menu: cash_payment_method_menu(@cash_payment.payment_method))
        = render "utils/text_field_for", locals.merge(param: :email, text: t("shop.payment.offline.email"), mark: "none")
      %hr
      .text-center
        = f.submit t("confirm"), class: "btn btn-primary"
        = link_to t("cancel"), cart_path, class: "btn btn-default"

- if entries.present? && entries.matches.any? && can?(:show, entries.matches.first)
  .voffset2
  .row
    .col-sm-12
      %h4.text-center Changes
      %table{class: "table table-bordered table-striped", id: "changes"}
        %thead
          = render "admin/journal_entries/journal_header", full: false
        %tbody{id: "change_rows"}
          = render "admin/journal_entries/change_rows", entries: entries

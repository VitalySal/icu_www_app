function player_ids_callback(icu_id, name) {
  $('#item_player_id').val(icu_id);
  $('#item_player_data').val("");
  $('#player_name').text(name + ' (' + icu_id + ')');
  $('#player_ids_modal').modal('hide');
  $('input[type="submit"]').show();
  $('.alert').hide();
  $('.select-player-button').removeClass('btn-info').addClass('btn-default');
}

<%- unless current_user.guest? %>
$(function() {
  $('#select_user_button').on('click', function(e) {
    e.preventDefault();
    player_ids_callback(<%= current_user.player_id %>, '<%= escape_single_quoted(current_user.player.name) %>')
  });
});
<%- end %>

%li{class: active("sessions")}
  - if current_user.guest?
    = link_to t("session.sign_in"), sign_in_path
  - else
    %li.dropdown
      = link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" } do
        = current_user.name
        %b.caret
      %ul.dropdown-menu
        %li= link_to t("session.sign_out"), sign_out_path
        %li{class: active("users")}= link_to t("user.preferences"), user_path(current_user)
        

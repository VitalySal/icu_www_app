= "#{time_ago_in_words result.updated_at, scope: 'datetime.short_distance_in_words'} ago, #{result.reporter_name}: "
= result.full_message
- if can?(:destroy, result)
  = link_to 'Delete', admin_result_path(result), :method => :delete, :class => 'btn btn-danger btn-xs', :data => { :confirm => 'Are you sure you want to delete the result?' }
- if can?(:update, result)
  = link_to 'Ban', ban_admin_result_path(result), :method => :post, :class => 'btn btn-danger btn-xs', :data => { :confirm => "Are you sure you want to ban #{result.reporter.name}?" }
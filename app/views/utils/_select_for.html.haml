- unless defined?(multiple)
  - multiple = false
- unless defined?(size)
  - size = multiple ? 4 : 1
- unless defined? mark
  - mark = "none"

.form-group{class: object.errors[param].any? ? "has-error" : ""}
  = form.label param, text + mark(mark), class: "control-label col-#{col}-#{pad}"
  %div{class: "col-#{col}-#{width}"}= form.select param, menu, {}, class: "form-control input-sm", multiple: multiple, size: size
  %div{class: "col-#{col}-#{12-pad-width} help-block"}= object.errors[param].first

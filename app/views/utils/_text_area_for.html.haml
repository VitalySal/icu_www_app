- defined?(rows)  || rows = 10
- defined?(klass) || klass = nil

.form-group{class: object.errors[param].any? ? "has-error" : ""}
  = form.label param, text, class: "control-label col-#{col}-#{pad}"
  %div{class: "col-#{col}-#{width}"}= form.text_area param, class: ["form-control", klass].compact.join(" "), rows: rows
  - unless object.errors[param].empty?
    %div{class: "col-#{col}-#{pad} help-block"}
    %div{class: "col-#{col}-#{width} help-block"}= object.errors[param].first

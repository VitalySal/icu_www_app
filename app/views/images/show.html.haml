- content_for :title, t("image.image")

= render "utils/prev_next", prev: @prev, id: @image.id, nixt: @next

.text-center.voffset3
  = image_tag @image.data.url

.row.voffset3
  .col-sm-12
    %table.table.table-bordered
      %tr
        %th= t("image.caption")
        %td= @image.caption
      %tr
        %th= t("year")
        %td= @image.year
      %tr
        %th= t("image.credit")
        %td= @image.credit
      %tr
        %th= t("image.dimensions")
        %td= @image.dimensions_description
      - if can?(:create, Image)
        %tr
          %th= "File name"
          %td= @image.data_file_name
        %tr
          %th= "Content type"
          %td= @image.data_content_type
        %tr
          %th= "Image size"
          %td= @image.data_file_size
        - unless @image.updated_at == @image.data_updated_at
          %tr
            %th= "Image last updated"
            %td= @image.data_updated_at.to_s(:nosec)
      = render "utils/timestamps", object: @image, ability: :create
    - if can?(:update, @image)
      = link_to t("edit"), edit_admin_image_path(@image), class: "btn btn-primary"
    - if can?(:destroy, @image)
      = link_to t("delete"), admin_image_path(@image), data: { confirm: "Sure you want to delete this image?" }, method: :delete, class: "btn btn-danger"
    - if path = last_search(:images)
      = link_to t("last_search"), path, class: "btn btn-default"
    - else
      = link_to t("image.images"), images_path, class: "btn btn-default"

= render "admin/journal_entries/changes", entries: @entries

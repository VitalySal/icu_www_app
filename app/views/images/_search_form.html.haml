= form_tag images_path, method: :get, class: "form-inline", role: "form" do
  = render "utils/inline_text_field", param: :caption, text: t("image.caption"), size: 20
  = render "utils/inline_text_field", param: :year, text: t("image.year"), size: 4
  = render "utils/inline_text_field", param: :credit, text: t("image.credit")
  = button_tag "Search", type: "submit", class: "btn btn-default pull-right"

.row
  .text-center
    %h1= t("icu.documents")

.row
  .col-md-10.col-md-offset-1
    %ul
      - @documents.each do |document|
        %li
          = link_to document.title, document
          = document.subtitle
          = "(#{document.created_at})"
%br
- if can?(:create, Document)
  .text-center
    = link_to 'New Document', new_document_path, class: "btn btn-info"

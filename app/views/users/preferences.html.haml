- content_for :title, t("user.preferences")

.row
  .col-sm-8.col-sm-offset-2
    = form_tag update_preferences_path, class: "form-horizontal", role: "form" do
      = render "utils/form_header", header: t("user.preferences")
      - locals = { col: "sm", pad: 3, width: 6 }
      = render "utils/select_tag", locals.merge(param: "user[theme]", text: t("user.theme"), menu: user_theme_menu(@user.preferred_theme), auto: true)
      - if irish_enabled?
        = render "utils/select_tag", locals.merge(param: "user[locale]", text: t("user.locale"), menu: user_locale_menu(@user.locale), auto: true)
      = render "utils/check_box_tag", locals.merge(param: "user[hide_header]", text: t("user.hide_header"), checked: @user.hide_header, auto: true)
      = render "utils/check_box_tag", locals.merge(param: "user[newsletter]", text: t("user.newsletter"), checked: @user.newsletter, auto: true)
      = render "utils/check_box_tag", locals.merge(param: "user[junior_newsletter]", text: t("user.junior_newsletter"), checked: @user.junior_newsletter, auto: true)

- content_for :title, t("shop.shop")

- if current_cart || @completed_carts.present?
  .row
    .col-sm-12.text-center
      - if current_cart
        = link_to cart_path, class: "btn btn-info btn-md" do
          = succeed(":") do
            = t("shop.cart.current")
          = succeed(",") do
            = t("shop.cart.item.items", count: current_cart.cart_items.count)
          = euros(current_cart.total_cost)
      - if @completed_carts.present?
        = link_to t("shop.cart.completed"), completed_path, class: "btn btn-info btn-md"
  %hr
- if @subscription_fees.count > 0
  .row
    .col-sm-3
    .col-sm-6
      %h3.text-center= t("fee.type.subscriptions")
      %table.table.table-bordered
        %tbody
          - @subscription_fees.each do |fee|
            %tr
              %td.col-sm-10= link_to fee.description, new_subscription_path(subscription_fee_id: fee.id)
              %td.col-sm-2.text-center= euros(fee.amount)
- if @entry_fees.count > 0
  .row
    .col-sm-3
    .col-sm-6
      %h3.text-center= t("fee.type.entries")
      %table.table.table-bordered
        %tbody
          - @entry_fees.each do |fee|
            %tr
              %td.col-sm-10= link_to fee.description, new_entry_path(entry_fee_id: fee.id)
              %td.col-sm-2.text-center= euros(fee.amount)

- content_for :title, t("shop.cart.completed")
- content_for :javascript do
  = render(:partial => "toggle_cart", :handlers => [:erb], :formats => [:js])

%h3.text-center= t("shop.cart.completed")
%hr
- max = @completed_carts.size
- @completed_carts.each_with_index do |cart, i|
  = render "cart_summary", cart: cart, number: i + 1, max: max, toggle: true
  = render "items", cart: cart, hidden: true
  %hr

var toggleLinkText = {
  show: '<%= t("shop.cart.show") %>',
  hide: '<%= t("shop.cart.hide") %>',
};

$(function() {
  $('a[data-toggle]').click(function() {
    var number = $(this).data("toggle");
    toggleCart(number);
    return false;
  });
});

function toggleCart(n) {
  var cart = $('#cart-' + n);
  var link = $('#toggle-' + n);
  if (cart.is(':visible'))
  {
    cart.hide();
    link.text(toggleLinkText['show']);
  }
  else
  {
    cart.show();
    link.text(toggleLinkText['hide']);
  }
}

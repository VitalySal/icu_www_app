- content_for :title, t("tournament.tournament")

- admin = can?(:manage, @tournament)

= render "utils/prev_next", prev: @prev, id: @tournament.id, nixt: @next

.row
  .col-md-8.col-md-offset-2
    %h1.text-center
      = @tournament.name
      - unless @tournament.active
        %small= "(#{t('inactive')})"
    %table.table.table-bordered
      %tr
        %th= t("city")
        %td= @tournament.city
        %th= t("year")
        %td= @tournament.year
      %tr
        %th= t("tournament.category.category")
        %td= t("tournament.category.#{@tournament.category}")
        %th= t("tournament.format.format")
        %td= t("tournament.format.#{@tournament.format}")
      = render "utils/timestamps", object: @tournament, ability: :manage, two_col: true

.row
  .col-md-12
    %pre= preserve_leading_space(@tournament.details.icu_markup).html_safe

.row.voffset1
  .col-md-12
    - if admin
      = link_to t("edit"), edit_admin_tournament_path(@tournament), class: "btn btn-primary"
      = link_to t("delete"), admin_tournament_path(@tournament), data: { confirm: "Sure you want to delete this tournament?" }, method: :delete, class: "btn btn-danger"
    - if path = last_search(:tournaments)
      = link_to t("last_search"), path, class: "btn btn-default"
    - else
      = link_to t("tournament.tournaments"), admin_tournaments_path, class: "btn btn-default"

= render "admin/journal_entries/changes", entries: @entries

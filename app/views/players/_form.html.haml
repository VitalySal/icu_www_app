  = simple_form_for @player, html: { class: "form-horizontal" } do |f|
    %fieldset
      %legend= legend
      
      .form-inputs
        = f.input :last_name
        = f.input :first_name

      .form-actions
        = f.submit "Save", class: "btn btn-primary"

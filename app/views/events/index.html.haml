- content_for :title, t("event.calendar")

= render "utils/search_panel", form: "search_form", title: t("event.events"), col: "md"

- extra = can?(:create, Event)

.row
  .col-md-12
    - if @events.count > 0
      %table{class: "table table-bordered", id: "results"}
        %thead
          %tr
            %th.text-center= t("event.name")
            %th.text-center= t("event.location")
            %th.text-center= t("event.start")
            %th.text-center= t("event.end")
            - if extra
              %th.text-center= t("active")
        %tbody
          - @events.matches.each do |event|
            %tr
              %td= link_to event.name, event
              %td= event.location
              %td.text-center.no-wrap= event.start_date
              %td.text-center.no-wrap= event.end_date
              - if extra
                %td.text-center= event.active ? "✔" : "✘"
          = render "utils/pagination_links", pager: @events, columns: 4 + (extra ? 1 : 0)
    = render "utils/index_buttons", klass: Event
